@model IEnumerable<MiniGestorTareas.Models.Tarea>

@{
    ViewData["Title"] = "Listado de tareas";
}

<h1>Listado de tareas</h1>

<form method="get" class="row g-2 align-items-center mb-3">

    <div class="col-auto">
        <input type="text"
               name="q"
               value="@(ViewData["q"] as string)"
               class="form-control"
               placeholder="Buscar por título..." />
    </div>

    <div class="col-auto">
        <select name="status" class="form-select"
                asp-items="Html.GetEnumSelectList<MiniGestorTareas.Models.Status>()">
            <option value="">-- Estado (todos) --</option>
        </select>
    </div>

    <div class="col-auto">
        <select name="priority" class="form-select"
                asp-items="Html.GetEnumSelectList<MiniGestorTareas.Models.Priority>()">
            <option value="">-- Prioridad (todas) --</option>
        </select>
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
    </div>

</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Nueva tarea</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Título</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Prioridad</th>
            <th>Creada</th>
            <th>Fecha objetivo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>

                <td>
                    @{
                        var corta = item.Description?.Length > 30
                            ? item.Description.Substring(0, 30) + "..."
                            : item.Description;
                    }
                    @corta
                </td>

                <td>@Html.DisplayFor(modelItem => item.Status)</td>

                <td>@Html.DisplayFor(modelItem => item.Priority)</td>

                <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>

                <td>@(item.DueDate.HasValue? item.DueDate.Value.ToString("dd/MM/yyyy") : "-")</td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalle</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>