@model IEnumerable<MiniGestorTareas.Models.Tarea>

@{
    ViewData["Title"] = "Listado de tareas";
}

<h1>Listado de tareas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Nueva tarea</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Título</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Prioridad</th>
            <th>Creada</th>
            <th>Fecha objetivo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>

                <td>
                    @{
                        var corta = item.Description?.Length > 30
                            ? item.Description.Substring(0, 30) + "..."
                            : item.Description;
                    }
                    @corta
                </td>

                <td>
                    @if (item.Status == MiniGestorTareas.Models.Status.Pending)
                    {
                        <span class="badge bg-secondary">Pendiente</span>
                    }
                    else if (item.Status == MiniGestorTareas.Models.Status.InProgress)
                    {
                        <span class="badge bg-warning text-dark">En progreso</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Completada</span>
                    }
                </td>

                <td>
                    @if (item.Priority == MiniGestorTareas.Models.Priority.High)
                    {
                        <span class="text-danger fw-bold">Alta</span>
                    }
                    else if (item.Priority == MiniGestorTareas.Models.Priority.Medium)
                    {
                        <span class="text-warning fw-bold">Media</span>
                    }
                    else
                    {
                        <span class="text-success fw-bold">Baja</span>
                    }
                </td>

                <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>

                <td>@(item.DueDate.HasValue? item.DueDate.Value.ToString("dd/MM/yyyy") : "-")</td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalle</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>