@model IEnumerable<MiniGestorTareas.Models.Tarea>

@{
    ViewData["Title"] = "Listado de tareas";
    string sort = (ViewData["sort"] as string) ?? "created_desc";

    int currentPage = (int)(ViewData["page"] ?? 1);
    int totalPages = (int)(ViewData["totalPages"] ?? 1);
    int totalItems = (int)(ViewData["totalItems"] ?? 0);

    string Toggle(string asc, string desc) => sort == asc ? desc : asc;

    string Arrow(string asc, string desc)
    {
        if (sort == asc) return " ↑";
        if (sort == desc) return " ↓";
        return " ↕";
    }

    string ActiveClass(string asc, string desc)
        => (sort == asc || sort == desc) ? "text-warning" : "text-white";
}

<h1>Listado de tareas</h1>

<form method="get" class="row g-2 align-items-center mb-3">

    <div class="col-auto">
        <input type="text"
               name="q"
               value="@(ViewData["q"] as string)"
               class="form-control"
               placeholder="Buscar por título..." />
    </div>

    <div class="col-auto">
        <select name="status" class="form-select"
                asp-items="Html.GetEnumSelectList<MiniGestorTareas.Models.Status>()">
            <option value="">-- Estado (todos) --</option>
        </select>
    </div>

    <div class="col-auto">
        <select name="priority" class="form-select"
                asp-items="Html.GetEnumSelectList<MiniGestorTareas.Models.Priority>()">
            <option value="">-- Prioridad (todas) --</option>
        </select>
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">Aplicar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
    </div>

</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Nueva tarea</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th style="width:60px;">Id</th>
            <th>Título</th>
            <th>Descripción</th>
            <th style="width:140px;">Estado</th>

            <th style="width:140px;">
                <a asp-action="Index"
                       asp-route-q="@(ViewData["q"] as string)"
                       asp-route-status="@(ViewData["status"])"
                       asp-route-priority="@(ViewData["priority"])"
                       asp-route-sort="@(Toggle("priority_asc","priority_desc"))"
                       asp-route-page="1"
                       class="@ActiveClass("priority_asc","priority_desc") text-decoration-none fw-semibold"
                       style="cursor:pointer;"
                       title="Ordenar por prioridad">
                    Prioridad@(Arrow("priority_asc", "priority_desc"))
                </a>
            </th>

            <th style="width:110px;">Creada</th>

            <th style="width:150px;">
                <a asp-action="Index"
                       asp-route-q="@(ViewData["q"] as string)"
                       asp-route-status="@(ViewData["status"])"
                       asp-route-priority="@(ViewData["priority"])"
                       asp-route-sort="@(Toggle("duedate_asc","duedate_desc"))"
                       asp-route-page="1"
                       class="@ActiveClass("duedate_asc","duedate_desc") text-decoration-none fw-semibold"
                       style="cursor:pointer;"
                       title="Ordenar por fecha objetivo">
                    Fecha objetivo@(Arrow("duedate_asc", "duedate_desc"))
                </a>
            </th>

            <th style="width:220px;"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>

                <td>
                    @{
                        var corta = item.Description?.Length > 50
                            ? item.Description.Substring(0, 50) + "..."
                            : item.Description;
                    }
                    @corta
                </td>

                <td>
                    @if (item.Status == MiniGestorTareas.Models.Status.Pending)
                    {
                        <span class="badge bg-secondary">Pendiente</span>
                    }
                    else if (item.Status == MiniGestorTareas.Models.Status.InProgress)
                    {
                        <span class="badge bg-warning text-dark">En progreso</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Completada</span>
                    }
                </td>

                <td>
                    @if (item.Priority == MiniGestorTareas.Models.Priority.High)
                    {
                        <span class="badge bg-danger">Alta</span>
                    }
                    else if (item.Priority == MiniGestorTareas.Models.Priority.Medium)
                    {
                        <span class="badge bg-warning text-dark">Media</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Baja</span>
                    }
                </td>

                <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                <td>@(item.DueDate.HasValue? item.DueDate.Value.ToString("dd/MM/yyyy") : "-")</td>

                <td>
                    <div class="d-flex flex-wrap gap-2 justify-content-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detalle</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- PAGINACIÓN -->
<nav class="d-flex justify-content-between align-items-center mt-3">
    <div class="text-muted">
        Página <strong>@currentPage</strong> de <strong>@totalPages</strong>
        · Total: <strong>@totalItems</strong> tareas
    </div>

    <ul class="pagination mb-0">
        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
            <a class="page-link"
                   asp-action="Index"
                   asp-route-q="@(ViewData["q"] as string)"
                   asp-route-status="@(ViewData["status"])"
                   asp-route-priority="@(ViewData["priority"])"
                   asp-route-sort="@(ViewData["sort"])"
                   asp-route-page="@(currentPage - 1)">
                Anterior
            </a>
        </li>

        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
            <a class="page-link"
                   asp-action="Index"
                   asp-route-q="@(ViewData["q"] as string)"
                   asp-route-status="@(ViewData["status"])"
                   asp-route-priority="@(ViewData["priority"])"
                   asp-route-sort="@(ViewData["sort"])"
                   asp-route-page="@(currentPage + 1)">
                Siguiente
            </a>
        </li>
    </ul>
</nav>