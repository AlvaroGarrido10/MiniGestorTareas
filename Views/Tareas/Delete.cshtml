@model MiniGestorTareas.Models.Tarea

@{
    ViewData["Title"] = "Eliminar tarea";
}

<h1>Eliminar</h1>

<div class="alert alert-warning" role="alert">
    <strong>Atención:</strong> esta acción no se puede deshacer.
</div>

<h4>¿Seguro que quieres eliminar esta tarea?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Título</dt>
    <dd class="col-sm-9">@Model.Title</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "-")</dd>

    <dt class="col-sm-3">Prioridad</dt>
    <dd class="col-sm-9">@Model.Priority</dd>

    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Fecha de creación</dt>
    <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-3">Fecha objetivo</dt>
    <dd class="col-sm-9">@(Model.DueDate.HasValue? Model.DueDate.Value.ToString("dd/MM/yyyy") : "-")</dd>
</dl>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>